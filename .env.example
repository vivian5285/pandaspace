# 项目基础配置
PROJECT_NAME=trading
NODE_ENV=production
TZ=Asia/Shanghai

# MongoDB 配置
MONGO_USER=tradingadmin
MONGO_PASSWORD=Trading@2024
MONGO_DATABASE=trading
MONGO_PORT=27017

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-2024
JWT_ADMIN_SECRET=your-super-secret-admin-jwt-key-2024
JWT_EXPIRES_IN=7d

# API 端口配置
USER_API_PORT=3000
ADMIN_API_PORT=3001
USER_UI_PORT=4000
ADMIN_UI_PORT=4001

# Nginx 配置
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
DOMAIN=trading.yourdomain.com
ADMIN_DOMAIN=admin.trading.yourdomain.com

# API URL 配置
USER_API_URL=https://trading.yourdomain.com/api
ADMIN_API_URL=https://admin.trading.yourdomain.com/api

# Binance API 配置
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# 性能配置
NODE_OPTIONS="--max-old-space-size=2048" 